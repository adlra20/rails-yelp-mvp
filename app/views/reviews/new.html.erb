<div class="container">
<h1>New Review for <%= @restaurant.name %></h1>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
<br><br>
<%= link_to '<i class="fas fa-long-arrow-alt-left"></i> Back to the tasks'.html_safe, restaurants_path %>
</div>