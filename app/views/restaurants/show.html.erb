<div class="container">
    <h1><%= @restaurant.name %></h1>
    <p><%= @restaurant.address %> </p>
    <p><%= @restaurant.phone_number %> </p>
    <p><%= @restaurant.category %> </p>
    <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %> Rating: <%= review.rating %>  <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, review_path(review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %></li>
    <% end %>
    </ul>
    <br>
    <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
    <%= link_to "Add a review to #{@restaurant.name}", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
</div>